/* Reset
----------------------------------- */
@import url("normalize.css")


/* Demo
----------------------------------- */
$webfont = 'Montserrat'
$stack = $webfont, Helvetica, Arial, sans-serif

body
	font 14px/20px $stack
	color #222
	background #ebe7df url("data:image/png;base64,") repeat-x
	*background-image url(ie/header-line.png)

a
	color #222
	text-decoration none
	border-bottom 1px solid #bbb

	&:hover
		color #000

	&.self
		border-bottom 1px dotted #aaa

strong
	font-weight 700

p
	margin 0 0 8px

label
	cursor pointer

h1
h2
h3
h4
	margin 0
	font bold 20px/60px $stack

h2
	height 60px
	text-align center
	text-transform uppercase

h4
	font-size 18px
	line-height 24px

ul
	margin 0
	padding 0
	list-style none

table
	width 100%
	margin-bottom 21px

th
td
	padding 11px 20px 13px
	vertical-align top
	font-weight normal
	text-align left
	border-bottom 2px solid #E7E5E0

	thead &
		background lighten(#E7E5E0, 50%)

th
	white-space nowrap

td
	width 100%

.focus
	outline 1px dotted rgba(0,0,0,.5) !important

.clear
	position relative
	*zoom 1

	&:before
	&:after
		content ''
		display table
		clear both

.layout
	width 930px
	min-height 100%
	margin 0 auto -80px
	padding 0 15px

.header
	color #fff
	text-align center

	h3
		padding 133px 0 33px
		font-size 120px
		line-height 140px
		letter-spacing -5px

	h1
		position relative
		padding 28px 0 73px
		font-size 22px
		line-height 28px
		letter-spacing -1px
		text-transform uppercase

		&:before
			content ''
			position absolute
			top 0
			left 50%
			width 100px
			height 3px
			margin-left -50px
			overflow hidden
			background #fff

.features
	position relative
	font-size 16px
	color #555
	background #fff

	a
		color #555

		&:hover
			color #333

		&.self
			border-bottom-color #bbb

	.arrows
		top 0

	&:hover .arrows .top
	&:hover .arrows .bottom
		left 0

	h2
		color #fff
		background #2489c5

	ul
		padding 44px 60px 36px

	li
		padding 0 0 9px 36px
		background url("data:image/png;base64,") 0 1px no-repeat
		*background-image url(ie/icon-star.png)

		&.offset
			margin-top 20px

.features li span
.mark
	padding 0 2px
	color lighten(#555, 20%)
	background lighten(#d7d4cc, 40%)

.skin-polaris .mark
	background darken(#2C323C, 20%)

.skin-futurico .mark
	background darken(#2E3035, 20%)

.actions li
	float left
	width 310px
	height 43px
	text-align center

	a
		display block
		height 40px
		line-height 38px
		color #fff
		border none
		background #E76B66

		&:hover
			border-bottom 3px solid darken(#E76B66, 10%)

	&.fork a
		background #579AA9

		&:hover
			border-bottom-color darken(#579AA9, 10%)

	&.follow a
		background #1D8BC6

		&:hover
			border-bottom-color darken(#1D8BC6, 10%)

.actions-large li
	height 63px

	a
		height 60px
		font-size 18px
		line-height 58px

.examples
	padding-top 56px

	h2
		margin-bottom -2px
		font-size 24px

.arrows
	position absolute
	top 3px
	left -60px
	width 60px
	overflow hidden

	.top
	.bottom
		position relative
		left 60px
		width 60px
		height 60px
		cursor pointer
		-webkit-transition left .2s ease-in-out
		-moz-transition left .2s ease-in-out
		-ms-transition left .2s ease-in-out
		-o-transition left .2s ease-in-out
		transition left .2s ease-in-out

