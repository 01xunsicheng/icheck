/* Reset
----------------------------------- */
@import url("normalize.css")


/* Demo
----------------------------------- */
$webfont = 'Montserrat'
$stack = $webfont, Helvetica, Arial, sans-serif

html
body
	height 100%

html
	overflow-y scroll

body
	font 14px/20px $stack
	color #222
	background #ebe7df url("data:image/png;base64,") repeat-x
	*background-image url(ie/header-line.png)

a
	color #222
	text-decoration none
	border-bottom 1px solid #bbb

	&:hover
		color #000

.self
	border-bottom 1px dotted #aaa

strong
	font-weight 700

p
	margin 0 0 8px

label
	cursor pointer

h1
h2
h3
h4
	margin 0
	font bold 20px/60px $stack

h2
	height 60px
	text-align center
	text-transform uppercase

h4
	font-size 18px
	line-height 24px

ul
	margin 0
	padding 0
	list-style none

table
	width 100%
	margin-bottom 21px

th
td
	padding 11px 20px 12px
	vertical-align top
	font-weight normal
	text-align left
	border-bottom 2px solid #E7E5E0

	thead &
		background lighten(#E7E5E0, 50%)

th
	white-space nowrap

td
	width 100%

.focus
	outline 1px dotted rgba(0,0,0,.5) !important

.clear
	position relative
	*zoom 1

	&:before
	&:after
		content ''
		display table
		clear both

.layout
